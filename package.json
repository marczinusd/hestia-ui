{
  "name": "hestia-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "jest --maxWorkers=1",
    "test:coverage": "jest --coverage --maxWorkers=1",
    "test:watch": "jest --watchAll",
    "lint": "ng lint && eslint . --ext .ts,.json --ignore-pattern node_modules/",
    "lint:fix": "tslint --fix -c tslint.json --project tsconfig.json && eslint . --ext .ts,.json --ignore-pattern node_modules/ --fix",
    "e2e": "cypress open",
    "e2e:ci": "start-server-and-test start http-get://localhost:4200 cy:run",
    "cy:run": "cypress run"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^10.0.8",
    "@angular/common": "^10.0.8",
    "@angular/compiler": "^10.0.8",
    "@angular/core": "^10.0.8",
    "@angular/forms": "^10.0.8",
    "@angular/platform-browser": "^10.0.8",
    "@angular/platform-browser-dynamic": "^10.0.8",
    "@angular/router": "^10.0.8",
    "primeicons": "^4.0.0",
    "primeng": "^10.0.0-rc.2",
    "rxjs": "~6.5.5",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1000.5",
    "@angular/cli": "~10.0.5",
    "@angular/compiler-cli": "^10.0.8",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.1",
    "@cypress/webpack-preprocessor": "5.4.2",
    "@ngneat/spectator": "^5.13.0",
    "@types/jest": "^26.0.9",
    "@types/node": "^12.12.54",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "codelyzer": "^6.0.0",
    "cypress": "4.12.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "jest-preset-angular": "^8.2.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "prettier-eslint": "^11.0.0",
    "start-server-and-test": "^1.11.3",
    "ts-loader": "8.0.2",
    "ts-node": "~8.3.0",
    "tslib": "^2.0.1",
    "tslint": "~6.1.0",
    "typescript": "~3.9.5"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupJest.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/",
      "<rootDir>/src/test.ts",
      "<rootDir>/cypress/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/app/**/*.ts",
      "!<rootDir>/src/app/fakes/*.ts",
      "!<rootDir>/src/app/**/*.module.ts",
      "!<rootDir>/node_modules/",
      "!**/*.d.ts"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 90
      }
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$",
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:coverage",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.json": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,js}": [
      "eslint --fix",
      "tslint --fix",
      "prettier --write"
    ],
    "*.{md,html,css,scss}": "prettier --write"
  }
}
